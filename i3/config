  colors {
    background #303030
      statusline #d0d0d0
      separator #d0d0d0

      #<colorclass>      <border> <background>  <text>
      focused_workspace  #80ff00    #80ff00    #101010
      active_workspace   #66aa11    #66aa11    #101010
      inactive_workspace #303030    #303030    #d0d0d0
      urgent_workspace   #960050    #960050    #d0d0d0
      binding_mode       #960050    #960050    #d0d0d0
  }
}
