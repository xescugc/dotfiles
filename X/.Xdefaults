! Scrollbar
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.scrollBar_floating: flase
URxvt.scrollstyle: plain

! Scroll on secondary screen (less)
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

!Molokai theme
URxvt*background: #101010
URxvt*foreground: #d0d0d0
URxvt*color0: #101010
URxvt*color1: #960050
URxvt*color2: #66aa11
URxvt*color3: #c47f2c
URxvt*color4: #30309b
URxvt*color5: #7e40a5
URxvt*color6: #3579a8
URxvt*color7: #9999aa
URxvt*color8: #303030
URxvt*color9: #ff0090
URxvt*color10: #80ff00
URxvt*color11: #ffba68
URxvt*color12: #5f5fee
URxvt*color13: #bb88dd
URxvt*color14: #4eb4fa
URxvt*color15: #d0d0d0

! If it's not found run 'xset fp rehash' after installing
URxvt.font: -gohu-gohufont-medium-r-normal--14-*
!URxvt.font: xft:GohuFont:style=Normal:pixelsize=14
!URxvt.font: xft:Gohu GohuFont:style=Regular:pixelsize=14
!URxvt.font: xft:Unifont:style=Sans-Serif:pixelsize=10
!URxvt.font: xft:GohuFont Nerd Font
!URxvt.font: xft:Tamsyn:style=Regular:pixelsize=13
!URxvt.font: xft:Terminus:style=Regular:pixelsize=14
!urxvt.font: xft:Terminus:pixelsize=12
URxvt.letterSpace: 1

URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1
