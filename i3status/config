# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
  colors = true
  interval = 5
  color_good = "#80ff00"
  color_degraded = "#d0d0d0"
  color_bad = "#ff0090"
}

#order += "ipv6"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "battery 0"
order += "battery 1"
order += "load"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "tztime local"

wireless _first_ {
  format_up = "W: (%quality at %essid) %ip"
  format_down = "W: down"
}

ethernet _first_ {
  # if you use %speed, i3status requires root privileges
  format_up = "E: %ip (%speed)"
  format_down = "E: down"
}

battery all {
  format = "%status %percentage %remaining"
  last_full_capacity = true
  hide_seconds = true
  low_threshold = 10
  threshold_type = percentage
}

battery 0 {
  format = "0: %percentage"
  last_full_capacity = true
  integer_battery_capacity = true
  hide_seconds = true
  low_threshold = 10
  threshold_type = percentage
}

battery 1 {
  format = "1: %percentage"
  last_full_capacity = true
  hide_seconds = true
  integer_battery_capacity = true
  low_threshold = 10
  threshold_type = percentage
}

tztime local {
  format = "%Y-%m-%d %H:%M:%S"
}

load {
  format = "%1min"
}

cpu_usage {
  format = "C: %usage"
}

cpu_temperature 0 {
  format = "%degrees °C"
}

disk "/" {
  format = "%avail"
}
